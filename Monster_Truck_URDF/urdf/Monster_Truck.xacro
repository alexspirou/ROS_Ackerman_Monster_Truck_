<?xml version="1.0" ?>

<robot name="Monster_Truck" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <link name="base_link">
        <visual>
            <material name="Blue">
                <color rgba="0 0 1 1"/>
            </material>
            <origin rpy="0 0 0" xyz="0 0 0.2"/>
            <geometry>
                <box size="1 0.5 0.1"/>
            </geometry>
        </visual>
    </link>
<!--****************************************-->
<!--****************************************-->

    <link name="front">
        <visual>
            <material name="Black">
                <color rgba="0 0 0 1"/>
            </material>
            <origin rpy="0 0 0" xyz="0 0.5 0.25"/>
            <geometry>
                <box size="0.1 0.1 0.2"/>
            </geometry>
        </visual>   
    </link>     
  <joint name="front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
<!--****************************************-->
<!--****************************************-->
    <link name="link_left_f">
        <visual>
            <material name="Red">
                <color rgba="1 0 0 1"/>
            </material>
            <origin rpy="0 0 0" xyz="-0.3 0.1 0.1"/>
            <geometry>
                <box size="0.05 0.05 0.1"/>
            </geometry>
        </visual>   
    </link>     
  <joint name="fixed_left_front" type="fixed">
    <parent link="base_link"/>
    <child link="link_left_f"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 0"/>
  </joint>
<!--****************************************-->
<!--****************************************-->
    <link name="link_left_f_2">
        <visual>
            <material name="Green">
                <color rgba="0 1 0 1"/>
            </material>
            <origin rpy="0 0 0" xyz="-0.2 0.2 0.05"/>
            <geometry>
                <box size="0.05 0.2 0.05"/>
            </geometry>
        </visual>   
    </link>     
  <joint name="fixed_left_front_2" type="fixed">
    <parent link="link_left_f"/>
    <child link="link_left_f_2"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 0"/>
  </joint>
<!--****************************************-->
<!--****************************************-->
  <link name="left_wheel_f">
        <visual>
   	        <material name="Black">
                <color rgba="0 0 0 1"/>
            </material>    	
             <origin xyz="0 0 0" rpy="1.570795 0 0" />
            <geometry>
                <cylinder length="0.15" radius="0.12" />
            </geometry>
        </visual>
    </link>
<!--****************************************-->
<!--****************************************-->   
  <joint name="joint_left_wheel_f" type="continuous">
    <parent link="link_left_f_2"/>
    <child link="left_wheel_f"/>
    <origin xyz="-0.20 0.30 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>
<!--****************************************-->
<!--****************************************-->   
    <link name="sign_left_front">
        <visual>
            <material name="White">
                <color rgba="1 1 1 1"/>
            </material>
            <origin rpy="0 0 0" xyz="0 0 0.12"/>
            <geometry>
                <sphere radius="0.02" />
            </geometry>
        </visual>   
    </link>     
  <joint name="fixed_sign_left_f" type="fixed">
    <parent link="left_wheel_f"/>
    <child link="sign_left_front"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>







</robot>